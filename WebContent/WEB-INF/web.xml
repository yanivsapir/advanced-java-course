<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>MVCApplication</display-name>
  <servlet>
		<display-name>LoginServlet</display-name>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>il.ac.shenkar.todolistapi.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>RegisterServlet</display-name>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>il.ac.shenkar.todolistapi.servlets.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>UpdateToDoListItemServlet</display-name>
		<servlet-name>UpdateToDoListItemServlet</servlet-name>
		<servlet-class>il.ac.shenkar.todolistapi.servlets.UpdateToDoListItemServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>DeleteToDoListItemServlet</display-name>
		<servlet-name>DeleteToDoListItemServlet</servlet-name>
		<servlet-class>il.ac.shenkar.todolistapi.servlets.DeleteToDoListItemServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>SaveNewToDoListItemServlet</display-name>
		<servlet-name>SaveNewToDoListItemServlet</servlet-name>
		<servlet-class>il.ac.shenkar.todolistapi.servlets.SaveNewToDoListItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateToDoListItemServlet</servlet-name>
		<url-pattern>/UpdateToDoListItemServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteToDoListItemServlet</servlet-name>
		<url-pattern>/DeleteToDoListItemServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SaveNewToDoListItemServlet</servlet-name>
		<url-pattern>/SaveNewToDoListItemServlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>