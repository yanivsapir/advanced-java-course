<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="il.ac.shenkar.todolistapi.models.User" table="users">
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
    </class>
    <class name="il.ac.shenkar.todolistapi.models.ToDoListItem" table="items">
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
    </class>
</hibernate-mapping>